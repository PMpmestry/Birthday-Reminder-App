<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical" >
	
    <EditText 
        android:ems="10"
        android:hint="No Email Id"
        android:id="@+id/et_to"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:inputType="none"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />
    
    <EditText 
        android:ems="10"
        android:hint="Enter Subject"
        android:id="@+id/et_sub"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_below="@id/et_to"
        android:inputType="none"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_to"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />
    
    <EditText 
        android:ems="10"
        android:hint="Enter Message text"
        android:id="@+id/et_text"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:inputType="textPostalAddress"
        android:layout_below="@id/et_sub"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_sub"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />
    
    <Button 
        android:id="@+id/btn_submit"
        android:layout_height="55dp"
        android:layout_width="0dp"
        android:text="Send Mail"
        android:layout_below="@id/et_text"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/et_text"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />

</android.support.constraint.ConstraintLayout>
